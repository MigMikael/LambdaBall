<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/txtConnectStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        android:textAlignment="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtArduino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="220sp"
        android:textColor="@color/colorText"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtArduino"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonGround"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonHead"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="30sp"
                android:backgroundTint="@color/colorButton"
                android:text="Head" />

            <TextView
                android:id="@+id/txtHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="B,00.00"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="45sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStart"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonStart"
                android:text="G:"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtGvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonStart"
                android:text="00.00"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/txtA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtG"
                android:text="A:"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtAvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtG"
                android:text="00.00"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtA"
                android:text="M:"
                android:textColor="@color/colorText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtMvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtA"
                android:text="00.00"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtM"
                android:text="B:"
                android:textSize="30sp"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/txtBvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtM"
                android:text="00.00"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="30sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/colorButton"
            android:layout_height="80dp"
            android:textSize="40sp"
            android:layout_weight="1"
            android:text="Exit" />

    </LinearLayout>

</LinearLayout>